{% block scripts %}
<script>
// Share Product
function shareProduct() {
    const shareUrl = '{{ url_for('view_product', id=product.id, _external=True) }}';
    const shareTitle = '{{ product.name }}';

    if (navigator.share) {
        navigator.share({
            title: shareTitle,
            url: shareUrl
        }).catch(err => console.log('Share cancelled'));
    } else {
        navigator.clipboard.writeText(shareUrl).then(() => {
            alert('üìã Link copied to clipboard!');
        });
    }
}

// Delete Product (Admin)
function deleteProduct() {
    if (confirm('‚ö†Ô∏è Are you sure you want to delete this product? This action cannot be undone.')) {
        fetch("{{ url_for('delete_product', id=product.id) }}", {
            method: 'POST',
            headers: {'Content-Type': 'application/x-www-form-urlencoded'},
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('‚úÖ Product deleted successfully!');
                window.location.href = "{{ url_for('list_products') }}";
            } else {
                alert('‚ùå Failed to delete product: ' + data.message);
            }
        })
        .catch(error => {
            alert('‚ùå Error: ' + error.message);
        });
    }
}
</script>
{% endblock %}
